<%= form_for @article do |f| %>


<% if @article.errors.any? %>
  <h2>You dun goofed x<%= @article.errors.count  %> </h2>
  <details>
    <summary>Check em errors</summary>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </details>
<% end %>

   <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end  %>
